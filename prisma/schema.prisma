datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid()) // Change here
  firstName String
  lastName  String
  email     String   @unique
  password  String
  avatar    String?
  isActive  Boolean  @default(true) // Add this
  role      UserRole @default(USER) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")
}
enum UserRole {
  USER
  ADMIN
}

model Progam {
  id          String   @id @default(uuid()) // Change here
  title       String
  img         String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@map("programs")
}

model TeamMember {
  id           String   @id @default(uuid()) // Change here
  name         String
  role         String
  description  String?
  phone        String?
  email        String?
  socialsMedia String?
  profile      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@map("team_members")
}

model News {
  id        String      @id @default(uuid()) // Change here
  title     String
  content   String
  category  String?
  images    NewsImage[] 
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  @@map("news")
}

model NewsImage {
  id      String @id @default(uuid()) // Change here
  url     String
  newsId  String // This MUST match the News.id type
  news    News   @relation(fields: [newsId], references: [id], onDelete: Cascade)
  @@map("news_images")
}

model contact {
  id        String   @id @default(uuid()) // Change here
  firstName String
  lastName  String
  subject   String
  email     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("contacts")
}