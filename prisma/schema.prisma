datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_DEPLOYED")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid()) // Change here
  firstName String
  lastName  String
  email     String   @unique
  password  String
  avatar    String?
  isActive  Boolean  @default(true) // Add this
  role      UserRole @default(USER) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")
}
enum UserRole {
  USER
  ADMIN
}

model Progam {
  id          String   @id @default(uuid()) // Change here
  title       String
  img         String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@map("programs")
}

model TeamMember {
  id           String   @id @default(uuid()) // Change here
  name         String
  role         String
  description  String?
  phone        String?
  email        String?
  socialsMedia String?
  profile      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@map("team_members")
}

model News {
  id        String      @id @default(uuid()) // Change here
  title     String
  content   String
  category  String?
  images    NewsImage[] 
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  @@map("news")
}

model NewsImage {
  id      String @id @default(uuid()) // Change here
  url     String
  newsId  String // This MUST match the News.id type
  news    News   @relation(fields: [newsId], references: [id], onDelete: Cascade)
  @@map("news_images")
}

model contact {
  id        String   @id @default(uuid()) // Change here
  firstName String
  lastName  String
  subject   String
  email     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("contacts")
}

model donation {
  id        String   @id @default(uuid()) // Change here
  donorName      String
  donorEmail     String
  donorPhone     String?
  amount    Float
  status    DonationStatus @default(PENDING)
  paymentMethod    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("donations")
}

model sucessStory {
  id          String   @id @default(uuid()) // Change here
  title       String
  description String?
  img         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@map("success_stories")
}
model keyAchievement {
  id          String   @id @default(uuid()) // Change here
  title       String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@map("key_achievements")
}

model impact {
  id                String   @id @default(uuid())
  title             String?
  description       String?
  img               String?
  // Use String[] for PostgreSQL, or Json for MySQL/SQLite
  actions_keypoints String[] 
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("impacts")
}
enum DonationStatus {
  PENDING
  COMPLETED
  FAILED
}
enum DonationMethod {
  CREDIT_CARD
  PAYPAL
  BANK_TRANSFER
} 