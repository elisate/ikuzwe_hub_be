datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  avatar    String?
  // Changed from String to UserRole enum
  role      UserRole @default(USER) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")
}

enum UserRole {
  USER
  ADMIN
}

model Progam {
  id          Int      @id @default(autoincrement())
  title        String
  img         String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@map("programs")
}